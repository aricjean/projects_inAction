<%- include header %>
<form method="post">
	<div class="form-group">
		<input type="text" class="form-control" name="title" placeholder="标题" value="<%= art.title%>">		
	</div>

	<div class="form-group">
		<input type="text" class="form-control" name="tags" placeholder="标签" value="<%= art.tags%>">
	</div>
	
	<textarea class="form-control" name="content" placeholder="文章内容"><%= art.content %></textarea>

	<button type="submit" class="btn btn-success"></button>
</form>

<%- include footer %>